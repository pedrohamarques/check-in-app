{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@styles/*": ["./src/styles/*"],
            "@typings/*": ["./src/typings/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
